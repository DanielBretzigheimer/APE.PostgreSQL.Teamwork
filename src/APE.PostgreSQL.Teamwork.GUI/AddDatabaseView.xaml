<UserControl x:Class="APE.PostgreSQL.Teamwork.AddDatabaseView"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:local="clr-namespace:APE.PostgreSQL.Teamwork.View"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
				xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
				xmlns:system="clr-namespace:System;assembly=mscorlib"
				mc:Ignorable="d" Width="300" Foreground="Black">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Add Database" FontWeight="Bold" VerticalAlignment="Center" FontSize="18" />

        <ComboBox Grid.Row="1" ItemsSource="{Binding Databases}" SelectedItem="{Binding DatabaseName}" 
								materialDesign:HintAssist.Hint="Database Name"
							Margin="0,0,0,5" Style="{StaticResource MaterialDesignFloatingHintComboBox}"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Select Directory" />
            <Button Command="{Binding ChooseDirectoryPathCommand}" ToolTip="Choose directory">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Text="{Binding DatabasePath}" TextTrimming="CharacterEllipsis" />
                    <materialDesign:PackIcon Grid.Column="2" Margin="2" Kind="Folder" />
                </Grid>
            </Button>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="OK" Width="100" IsEnabled="{Binding DataChecked}" Command="{Binding OkCommand}" 
							Click="CloseClick" Style="{StaticResource MaterialDesignFlatRoundButton}" />
            <Button Grid.Column="2" Width="100" Content="Cancel" IsCancel="True"
									Style="{StaticResource MaterialDesignFlatRoundButton}"
									Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" >
                <Button.CommandParameter>
                    <system:Boolean>False</system:Boolean>
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
